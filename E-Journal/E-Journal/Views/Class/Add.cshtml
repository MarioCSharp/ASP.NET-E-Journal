@using E_Journal.Models.Class
@model ClassAddFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="ClassName"></label>
        <input asp-for="ClassName" class="form-control">
        <span asp-validation-for="ClassName" class="text-danger"></span>
    </div>
    <div class="form-group d-none">
        <label asp-for="SchoolId"></label>
    </div>
    <div class="form-group">
        <label asp-for="TeacherId"></label>
        <select asp-for="TeacherId" class="form-control">
            @foreach (var teacher in Model.Teachers)
            {
                <option value="@teacher.TeacherId">@teacher.Name</option>
            }
        </select>
        <span asp-validation-for="TeacherId" class="small text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Add" />
</form>