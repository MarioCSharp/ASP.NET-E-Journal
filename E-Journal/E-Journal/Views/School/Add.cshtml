@using E_Journal.Models.School
@model AddSchoolFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="SchoolName"></label>
        <input asp-for="SchoolName" class="form-control">
        <span asp-validation-for="SchoolName" class="text-danger"></span>
    </div>
    <br />
    <br />
    <div class="form-group">
        <label asp-for="CityId"></label>
        <select asp-for="CityId" class="form-control">
            @foreach (var city in Model.Cities)
            {
                <option value="@city.Id">@city.Name</option>
            }
        </select>
        <span asp-validation-for="CityId" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DirectorId"></label>
        <select asp-for="DirectorId" class="form-control">
            @foreach (var user in Model.Users)
            {
                <option value="@user.Id">@user.Name</option>
            }
        </select>
        <span asp-validation-for="DirectorId" class="small text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Add" />
</form>
